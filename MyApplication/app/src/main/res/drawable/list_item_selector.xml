<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- colors the item when pushed-->
    <item android:drawable="@color/colorSelected" android:state_pressed="true"></item>
    <item android:drawable="@color/colorSelected" android:state_activated="true"></item>
    <item android:drawable="@color/colorSelected" android:state_selected="true"></item>
    <!-- default color-->
    <item android:drawable="@color/white"></item>

</selector>